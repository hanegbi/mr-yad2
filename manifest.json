{
  "manifest_version": 3,
  "name": "יד2 הצגת מחיר למטר רבוע",
  "version": "1.0.1",
  "description": "Displays smart price per square meter for every property in Yad2 search results",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.yad2.co.il/realestate/forsale*",
        "https://www.yad2.co.il/realestate/rent*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}

